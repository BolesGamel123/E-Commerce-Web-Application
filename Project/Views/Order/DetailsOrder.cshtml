@model IEnumerable<Project.Models.Order>

@{
    ViewBag.Title = "DetailsOrder";
}
<style>
    .body-content {
        padding-left: 60px;
        padding-right: 60px;
        padding-top: 135px;
    }

    .footer {
        position: fixed !important;
        left: 0;
        bottom: 0;
        width: 100%;
        z-index: 1;
    }
</style>
<h2>Details Order</h2>



<div style="display:flex;margin-left:5px">
    @foreach (var item in Model)
    {
        <div class="card" style="width:400px">

            <div class="card-body">

                <p class="card-text">
                    Date:@item.Date <br />
                    Amount:  @item.Amount <br />
                    Address:  @item.Address
                </p>
                <a href="#" class="btn btn-primary">TotalPrice:@item.TotalPrice</a>
            </div>
        </div>

    }
</div>


<p>

    @Html.ActionLink("Back to List", "OrderByUserID")
</p>
@section scripts{
    <script src="~/Scripts/myscript/custom.js"></script>
}
