@model IEnumerable<Project.Models.Order>

@{
    ViewBag.Title = "OrderByUserID";
}
    <style>
        .body-content {
            padding-left: 60px;
            padding-right: 60px;
            padding-top: 135px;
        }

        .footer {
            position: fixed !important;
            left: 0;
            bottom: 0;
            width: 100%;
            z-index: 1;
        }
    </style>
<h2>OrderByUserID</h2>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            Setting
        </th>

    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.TotalPrice)
    </td>

    <td>
        @Html.ActionLink("Edit", "EditOrder", "Order", new { id = item.Id }, new { @class = "btn btn-info" }) |

        @Html.ActionLink("Delete", "DeleteOrder", "Order", new { id = item.Id }, new { @class = "btn btn-info" })
    </td>
</tr>
    }

</table>

